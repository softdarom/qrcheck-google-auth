apiVersion: v1
kind: Service
metadata:
  namespace: {{ namespace }}
  name: {{ application.name }}
  labels:
    app: {{ application.name }}
    version: {{ lookup('env', 'DOCKER_VERSION') | default('unknown') }}
spec:
  sessionAffinity: ClientIP
  type: ClusterIP
  ports:
    - name: tcp
      port: 8000
      targetPort: http
  selector:
    app: {{ application.name }}